<h2 class="new-to-twitter">New to Twitter? <span class="sign-up-span">Sign up</span></h2>
<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%=msg%></li> 
        <%end%>
    </ul>
<%end%>
<% @user = @user || User.new %>
<%= form_for @user do |f| %>
    <div>
        <%= f.label :name%>
        <%= f.text_field :name, :autofocus => true, :required => true, :placeholder => "Name" %>   
    </div>
    <div>
        <%= f.label :email %>
        <%= f.email_field :email, :required => true, :placeholder => "Email" %> 
    </div>
    <div>
        <%= f.label :username%>
        <%= f.text_field :username, :required => true, :placeholder => "Username"%>
    </div>
    <div>
        <%= f.label :password%>
        <%= f.password_field :password, :required => true%>
    </div>
    <div>   
        <%= f.label :password_confirmation%>
        <%= f.password_field :password_confirmation, :required => true %>
    </div>
    <div>
        <%= f.label :is_news, "Journalist/News outlet" %> 
        <%= f.check_box :is_news %>  
    </div>
    <div>
        <%= submit_tag "Sign up", :class => "signup-btn"%>
    </div>
<% end %>