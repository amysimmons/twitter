<h1>Sign in</h1>

<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%=msg%></li> 
        <%end%>
    </ul>
<%end%>


<%= form_for @user do |f| %>

    <div>
        <%= f.label :name%>
        <%= f.text_field :name, :autofocus => true, :required => true%>   
    </div>

    <div>
        <%= f.label :email %>
        <%= f.email_field :email, :required => true %> 
    </div>

    <div>
        <%= f.label :username%>
        <%= f.text_field :username, :required => true%>
    </div>

    <div>
        <%= f.label :bio, "Short bio" %>
        <%= f.text_area :bio %>
    </div>

    <div>
        <%= f.label :organisation%>
        <%= f.text_field :organisation %>
    </div>

    <div>
        <%= f.label :user_location%>
        <%= f.text_field :user_location %>
    </div>

    <div>
        <%= f.label :profile_pic, "Profile picture" %>
        <%= f.url_field :profile_pic %> 
    </div>

    <div>
        <%= f.label :is_news, "Journalist/News outlet" %> 
        <%= f.check_box :is_news %>  
    </div>

    <div>
        <%= f.label :password%>
        <%= f.password_field :password, :required => true%>
    </div>

    <div>   
        <%= f.label :password_confirmation%>
        <%= f.password_field :password_confirmation, :required => true %>
    </div>

    <div>
        <%= f.submit "Sign up" %>
    </div>

<% end %>
